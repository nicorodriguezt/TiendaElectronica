@model TiendaElectronica.venta

@{
    ViewBag.Title = "Details";
    ViewBag.idPresupuesto = Model.presupuesto.idPresupuesto;
}

<h2>Detalles de Compra</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Fecha: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaVenta)
        </dd>

        <dt>
            Numero de Factura: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FacturaNro)
        </dd>

    </dl>
</div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a class="btn btn-default" onclick="location.href='@Url.Action("Details", "presupuestoes", new { id = Model.IdPresupuesto })'">
                Ir al presupuesto
            </a>
            <a class="btn btn-default" onclick="location.href='@Url.Action("Historial","ventas")'">
                Volver
            </a>
        </div>      
    </div> 

